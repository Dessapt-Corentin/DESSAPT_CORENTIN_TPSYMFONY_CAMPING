{% extends 'base.html.twig' %}

{% block title %}Nouvel Hébergement{% endblock %}

{% block body %}
    <div class="accommodation-form-container">
        <h1>Ajouter un hébergement</h1>
    </div>
    <div class="accommodation-form">
        {{ form_start(form) }}
        
        <div class="form-group">
            {{ form_label(form.label) }}
            {{ form_widget(form.label) }}
            {{ form_errors(form.label) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.location_number) }}
            {{ form_widget(form.location_number) }}
            {{ form_errors(form.location_number) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.size) }}
            {{ form_widget(form.size) }}
            {{ form_errors(form.size) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {{ form_errors(form.description) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.capacity) }}
            {{ form_widget(form.capacity) }}
            {{ form_errors(form.capacity) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.image) }}
            {{ form_widget(form.image) }}
            {{ form_errors(form.image) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.availability) }}
            {{ form_widget(form.availability) }}
            {{ form_errors(form.availability) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.type) }}
            {{ form_widget(form.type) }}
            {{ form_errors(form.type) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.equipments) }}
            {{ form_widget(form.equipments) }}
            {{ form_errors(form.equipments) }}
        </div>
        
        <button type="submit" class="btn-submit">Ajouter</button>
        {{ form_end(form) }}
        
        <div class="form-group">
            {{ form_errors(form) }}
        </div>
        
        <div class="action-buttons">
            <a href="{{ path('app_home') }}" class="btn btn-back">
                <i class="fas fa-arrow-left"></i>
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
