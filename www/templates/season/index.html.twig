{% extends 'base.html.twig' %}

{% block title %}Liste des saisons
{% endblock %}

{% block body %}
	<div class="accommodation-list-container">
		{% include "components/_dashboard_button.html.twig" %}
		<h1>Liste des saisons</h1>

		<table class="accommodation-table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Label</th>
					<th>Date de début</th>
					<th>Date de fin</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for season in seasons %}
					<tr>
						<td>{{ season.id }}</td>
						<td>{{ season.label }}</td>
						<td>{{ season.dateStart ? season.dateStart|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ season.dateEnd ? season.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<div class="accommodation-actions">
								<a href="{{ path('app_season_show', {'id': season.id}) }}" class="view-link">Voir</a>
								<a href="{{ path('app_season_edit', {'id': season.id}) }}" class="edit-link">Editer</a>
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Aucun enregistrement trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div style="text-align: center;">
			<a href="{{ path('app_season_new') }}" class="add-accommodation-btn">Créer une nouvelle saison</a>
		</div>
	</div>
{% endblock %}
