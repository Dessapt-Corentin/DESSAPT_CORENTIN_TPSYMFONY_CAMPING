{% extends 'base.html.twig' %}

{% block title %}Réservation
{% endblock %}

{% block body %}
	<div class="accommodation-list-container">
		{% include "components/_dashboard_button.html.twig" %}
		<h1>Liste des réservations</h1>

		<table class="accommodation-table">
			<thead>
				<tr>
					<th>Id:</th>
					<th>Nom + Accommodation Id:</th>
					<th>Emplacement:</th>
					<th>Client:</th>
					<th>Tel:</th>
					<th>Date de début:</th>
					<th>Date de fin:</th>
					<th>Nombre adulte:</th>
					<th>Nombre enfant:</th>
					<th>Actions:</th>
				</tr>
			</thead>
			<tbody>
				{% for rental in rentals %}
					<tr>
						<td>{{ rental.id }}</td>
						<td>{{ rental.accommodation.label }}
							;
							{{rental.accommodation.id}}</td>
						<td>{{ rental.accommodation.locationNumber }}</td>
						<td>{{ rental.user.firstname }}
							{{rental.user.lastname}}</td>
						<td>{{ rental.user.phoneNumber }}</td>
						<td>{{ rental.dateStart ? rental.dateStart|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ rental.dateEnd ? rental.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ rental.adultNumber }}</td>
						<td>{{ rental.childNumber }}</td>
						<td>
							<div class="accommodation-actions">
								<a href="{{ path('app_rental_show', {'id': rental.id}) }}" class="view-link">Voir</a>
								<a href="{{ path('app_rental_edit', {'id': rental.id}) }}" class="edit-link">Editer</a>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div style="text-align: center;">
        	<a href="{{ path('app_admin_rental_new') }}" class="add-accommodation-btn">Créer une réservation</a>
    	</div>
	</div>
{% endblock %}
