{% extends 'base.html.twig' %}

{% block title %}TypeAccommodation index
{% endblock %}

{% block body %}
	<div class="accommodation-list-container">
		{% include "components/_dashboard_button.html.twig" %}
		<h1>TypeAccommodation index</h1>

		<table class="accommodation-table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Label</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for type_accommodation in type_accommodations %}
					<tr>
						<td>{{ type_accommodation.id }}</td>
						<td>{{ type_accommodation.label }}</td>
						<td>
							<div class="accommodation-actions">
								<a href="{{ path('app_type_accommodation_show', {'id': type_accommodation.id}) }}" class="view-link">Voir</a>
								<a href="{{ path('app_type_accommodation_edit', {'id': type_accommodation.id}) }}" class="edit-link">Editer</a>
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucun enregistrement trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div style="text-align: center;">
			<a href="{{ path('app_type_accommodation_new') }}" class="add-accommodation-btn">Créer un nouveau type d'hébergement</a>
		</div>
	</div>
{% endblock %}
